        <item name="android:textColor">@color/color_error_transient</item>
        <item name="android:text">@color/color_error_transient</item>
    </style>

    <style name="Widget_Rip.Material3.Button.OutlinedButton.Icon.Error" parent="Widget.Material3.Button.OutlinedButton.Icon">
